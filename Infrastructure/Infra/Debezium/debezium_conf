#Sink connector config - RabbitMQ
debezium.sink.type=rabbitmq
debezium.sink.rabbitmq.connection.host=rabbitmq
debezium.sink.rabbitmq.connection.port=5672
debezium.sink.rabbitmq.connection.username=admin
debezium.sink.rabbitmq.connection.password=admin123
debezium.sink.rabbitmq.ackTimeout=3000
debezium.sink.rabbitmq.exchange=inventory.exchange
debezium.sink.rabbitmq.routingKey=inventory.event

# Source connector config - PostgreSQL
debezium.source.connector.class=io.debezium.connector.postgresql.PostgresConnector
debezium.source.plugin.name=pgoutput
debezium.source.offset.storage.file.filename=data/offsets.dat
debezium.source.offset.flush.interval.ms=0
debezium.source.database.hostname=postgres
debezium.source.database.port=54320
debezium.source.database.user=postgres
debezium.source.database.password=postgres
debezium.source.database.dbname=postgres
debezium.source.table.include.list=public.products
debezium.source.topic.prefix=dev
debezium.source.capture.before=true
debezium.source.time.precision.mode=adaptive_time_microseconds
debezium.source.decimal.handling.mode=double
debezium.source.column.include.list=public.products.id,public.products.name,public.products.price,public.products.store_id
debezium.source.skip.messages.without.change=true

# Transform
debezium.transforms=unwrap
